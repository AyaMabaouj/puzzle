<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/digital_art_dark_lines_wallpaper_preview"
    tools:context=".PuzzleActivity">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/caesar_dressing"
        android:gravity="center"
        android:text="Puzzle Game"
        android:textColor="@color/Pink"
        android:textSize="50sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/tv_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:fontFamily="@font/cairo_bold"
        android:text="Essai: "
        android:textColor="@color/stats_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/outline_extension_24"
        app:drawableTint="@color/stats_text"
        app:layout_constraintBottom_toTopOf="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_move_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:text= "0"
        android:textColor="@color/stats_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_move"
        app:layout_constraintStart_toEndOf="@+id/tv_move"
        app:layout_constraintTop_toTopOf="@+id/tv_move" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:fontFamily="@font/cairo_bold"
        android:text="timer: "
        android:textColor="@color/stats_text"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_baseline_timer_24"
        app:drawableTint="@color/stats_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/tv_move"
        app:layout_constraintTop_toBottomOf="@+id/tv_move"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_time_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:text="00:00"
        android:textColor="@color/stats_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/tv_time" />




    <ImageView
        android:layout_width="400dp"
        android:layout_height="356dp"
        android:layout_marginTop="190dp"
        android:alpha="1.0"
        app:layout_constraintDimensionRatio="H,4:5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ho" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="310dp"
        android:layout_height="330dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,4:5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a_466071_1448943205_8677" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score :"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="300dp"
            android:fontFamily="@font/cairo_semibold"
            android:textColor="@color/stats_text"
            android:textSize="20sp"></TextView>
        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 "
            android:layout_marginTop="132dp"
            android:layout_marginLeft="360dp"
            android:fontFamily="@font/cairo_semibold"
            android:textColor="@color/stats_text"
            android:textSize="20sp"></TextView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>